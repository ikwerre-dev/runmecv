<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{{#if intro.name}}{{intro.name}}{{else}}Curriculum Vitae{{/if}}</title>
  <style>
    body {
      font-family: Times New Roman, serif;
      font-size: 12pt;
      line-height: 1.6;
      color: #000000;
      max-width: 800px;
      margin: 0 auto;
      padding: 30px;
      background: #ffffff;
    }

    .header {
      margin-bottom: 20px;
    }

    .name {
      font-size: 22pt;
      font-weight: bold;
      margin: 0;
    }

    .contact {
      font-size: 11pt;
      margin: 5px 0;
    }

    .section {
      margin: 20px 0;
    }

    .section-title {
      font-size: 16pt;
      font-weight: bold;
      margin-bottom: 12px;
      text-transform: uppercase;
    }

    .summary, .areas, .methodologies, .current_focus {
      font-size: 11pt;
      margin: 5px 0;
    }

    .publication-item, .grant-item, .teaching-item, .certification-item, .award-item, .education-item {
      margin: 15px 0;
    }

    .publication-item h3, .grant-item h3, .teaching-item h3, .certification-item h3, .award-item h3, .education-item h3 {
      font-size: 13pt;
      font-weight: bold;
      margin: 5px 0;
    }

    .publication-item p, .grant-item p, .teaching-item p, .certification-item p, .award-item p, .education-item p {
      font-size: 11pt;
      margin: 3px 0;
    }

    ul {
      list-style: disc;
      padding-left: 20px;
      margin: 5px 0;
    }

    li {
      font-size: 11pt;
      margin-bottom: 5px;
    }

    .links p {
      font-size: 11pt;
      margin: 3px 0;
    }

    @media print {
      body {
        padding: 20px;
      }
    }
  </style>
</head>
<body>
  <div class="header">
    <h1 class="name">
      {{#each sections.intro.fields}}
      {{#if name}}{{name}}{{/if}}
      {{/each}}
    </h1>
    <div class="contact">
      {{#each sections.intro.fields}}
      {{#if title}}<p>{{title}}</p>{{/if}}
      {{#if department}}<p>{{department}}</p>{{/if}}
      {{#if institution}}<p>{{institution}}</p>{{/if}}
      {{#if contact}}<p>{{contact}}</p>{{/if}}
      {{#if portfolio_url}}<p>{{portfolio_url}}</p>{{/if}}
      {{/each}}
    </div>
  </div>

  {{#each sections.intro.fields}}
  {{#if summary}}
  <div class="section">
    <h2 class="section-title">{{../sections.intro.title}}</h2>
    <p class="summary">{{summary}}</p>
  </div>
  {{/if}}
  {{/each}}

  {{#if sections.links.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.links.title}}</h2>
    <div class="links">
      {{#each sections.links.fields}}
      {{#if github}}<p>GitHub: {{github}}</p>{{/if}}
      {{#if linkedin}}<p>LinkedIn: {{linkedin}}</p>{{/if}}
      {{#if researchgate}}<p>ResearchGate: {{researchgate}}</p>{{/if}}
      {{#if portfolio_url}}<p>Portfolio: {{portfolio_url}}</p>{{/if}}
      {{/each}}
    </div>
  </div>
  {{/if}}

  {{#if sections.research.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.research.title}}</h2>
    {{#each sections.research.fields}}
    {{#if areas}}<p><strong>Areas:</strong> {{areas}}</p>{{/if}}
    {{#if methodologies}}<p><strong>Methodologies:</strong> {{methodologies}}</p>{{/if}}
    {{#if current_focus}}<p><strong>Current Focus:</strong> {{current_focus}}</p>{{/if}}
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.publications.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.publications.title}}</h2>
    {{#each sections.publications.fields}}
    <div class="publication-item">
      <h3>{{citation}}</h3>
      {{#if doi}}<p>DOI: {{doi}}</p>{{/if}}
      {{#if impact_factor}}<p>Impact Factor: {{impact_factor}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.grants.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.grants.title}}</h2>
    {{#each sections.grants.fields}}
    <div class="grant-item">
      <h3>{{title}}</h3>
      <p>{{amount}} - {{period}} - {{funding_body}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.teaching.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.teaching.title}}</h2>
    {{#each sections.teaching.fields}}
    <div class="teaching-item">
      <h3>{{course}}</h3>
      <p>{{level}} - {{institution}} - {{period}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.certifications.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.certifications.title}}</h2>
    {{#each sections.certifications.fields}}
    <div class="certification-item">
      <h3>{{name}}</h3>
      <p>{{issuer}} - {{date}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.languages.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.languages.title}}</h2>
    <ul>
      {{#each sections.languages.fields}}
      <li>{{language}} - {{proficiency}}</li>
      {{/each}}
    </ul>
  </div>
  {{/if}}

  {{#if sections.awards.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.awards.title}}</h2>
    {{#each sections.awards.fields}}
    <div class="award-item">
      <h3>{{title}}</h3>
      <p>{{issuer}} - {{date}}</p>
      {{#if description}}<p>{{description}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.education.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.education.title}}</h2>
    {{#each sections.education.fields}}
    <div class="education-item">
      <h3>{{degree}}</h3>
      <p>{{institution}}</p>
      {{#if thesis}}<p>Thesis: {{thesis}}</p>{{/if}}
      {{#if advisors}}<p>Advisors: {{advisors}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}
</body>
</html>