<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{{intro.name}} - Academic CV</title>
  <style>
    :root {
      --primary: #14213d;
      --secondary: #4a5568;
      --accent: #1a365d;
    }
    body {
      font-family: 'Times New Roman', serif;
      line-height: 1.6;
      max-width: 1000px;
      margin: 0 auto;
      padding: 40px;
      color: var(--primary);
    }
    .header {
      text-align: center;
      margin-bottom: 40px;
      border-bottom: 2px solid var(--primary);
      padding-bottom: 20px;
    }
    .name {
      font-size: 2.5em;
      margin: 0;
    }
    .title {
      font-size: 1.5em;
      color: var(--secondary);
      margin: 10px 0;
    }
    .contact-info {
      margin-top: 15px;
      font-style: italic;
    }
    .section {
      margin: 30px 0;
    }
    .section-title {
      font-size: 1.8em;
      color: var(--accent);
      border-bottom: 1px solid var(--secondary);
      margin-bottom: 20px;
    }
    .research-area {
      margin: 15px 0;
    }
    .publication {
      margin: 20px 0;
      padding-left: 25px;
      text-indent: -25px;
    }
    .grant {
      margin: 15px 0;
      padding: 15px;
      background: #f8f9fa;
    }
    .course {
      margin: 15px 0;
    }
    .degree {
      margin: 20px 0;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1 class="name">{{#if sections.intro.fields.name}}{{sections.intro.fields.name}}{{else}}Your Name{{/if}}</h1>
    <div class="contact-info">
      {{#if sections.intro.fields.email}}{{sections.intro.fields.email}} | {{/if}}
      {{#if sections.intro.fields.phone}}{{sections.intro.fields.phone}} | {{/if}}
      {{#if sections.intro.fields.location}}{{sections.intro.fields.location}} | {{/if}}
      {{#if sections.links.fields.portfolio_url}}{{sections.links.fields.portfolio_url}}{{/if}}
    </div>
  </div>

  {{#if sections.experience.fields}}
  <div class="section">
    <h2 class="section-title">Professional Experience</h2>
    {{#each sections.experience.fields}}
    <div class="experience-item">
      <h3>{{position}} at {{company}}</h3>
      {{#if duration}}<p class="dates">{{duration}}</p>{{/if}}
      {{#if achievements}}<p>{{achievements}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.skills.grouping}}
  <div class="section">
    <h2 class="section-title">Technical Skills</h2>
    <div class="skills-list">
      {{#each sections.skills.grouping}}
        {{#each skills}}
          <span class="skill">{{this}}</span>
        {{/each}}
      {{/each}}
    </div>
  </div>
  {{/if}}

  {{#if sections.projects.fields}}
  <div class="section">
    <h2 class="section-title">Research Projects</h2>
    {{#each sections.projects.fields}}
    <div class="project">
      <h3>{{name}}</h3>
      {{#if description}}<p>{{description}}</p>{{/if}}
      {{#if technologies}}<p><strong>Technologies:</strong> {{technologies}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.certifications.fields}}
  <div class="section">
    <h2 class="section-title">Certifications</h2>
    {{#each sections.certifications.fields}}
    <div class="certification">
      <h3>{{name}}</h3>
      <p>{{issuer}} - {{date}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.languages.fields}}
  <div class="section">
    <h2 class="section-title">Languages</h2>
    <ul>
      {{#each sections.languages.fields}}
      <li>{{language}} - {{proficiency}}</li>
      {{/end}}
    </ul>
  </div>
  {{/if}}

  {{#if sections.awards.fields}}
  <div class="section">
    <h2 class="section-title">Awards & Honors</h2>
    {{#each sections.awards.fields}}
    <div class="award">
      <h3>{{title}}</h3>
      <p>{{issuer}} - {{date}}</p>
      {{#if description}}<p>{{description}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.education.fields}}
  <div class="section">
    <h2 class="section-title">Education</h2>
    {{#each sections.education.fields}}
    <div class="degree">
      <h3>{{degree}}</h3>
      <p>{{institution}} - {{duration}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}
</body>
</html>