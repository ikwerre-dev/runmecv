<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>{{#if intro.name}}{{intro.name}}{{else}}Resume{{/if}}</title>
  <style>
    :root {
      --apple-dark-gray: #1C2526;
      --apple-gray: #6E6E73;
      --apple-light-gray: #D2D2D7;
      --apple-white: #FFFFFF;
      --apple-blue: #007AFF;
      --apple-accent: #5856D6;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'San Francisco', 'Helvetica Neue', Helvetica, Arial, sans-serif;
      font-size: 10pt;
      line-height: 1.6;
      color: var(--apple-dark-gray);
      max-width: 800px;
      margin: 0 auto;
      padding: 40px;
      background: var(--apple-white);
    }

    .header {
      text-align: center;
      margin-bottom: 30px;
    }

    .name {
      font-size: 28pt;
      font-weight: 600;
      color: var(--apple-dark-gray);
      margin: 0;
      line-height: 1.2;
    }

    .role {
      font-size: 14pt;
      font-weight: 400;
      color: var(--apple-gray);
      margin: 8px 0;
    }

    .contact {
      font-size: 10pt;
      color: var(--apple-gray);
      display: flex;
      justify-content: center;
      gap: 15px;
      flex-wrap: wrap;
    }

    .contact p {
      margin: 0;
    }

    .section {
      margin: 30px 0;
    }

    .section-title {
      font-size: 16pt;
      font-weight: 600;
      color: var(--apple-dark-gray);
      margin-bottom: 15px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .summary {
      font-size: 11pt;
      color: var(--apple-gray);
      line-height: 1.7;
      max-width: 80%;
      margin: 0 auto;
      text-align: center;
    }

    .links {
      display: flex;
      justify-content: center;
      gap: 20px;
      font-size: 11pt;
      color: var(--apple-blue);
    }

    .links p {
      margin: 0;
    }

    .expertise-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
      padding: 15px 0;
    }

    .expertise-grid div {
      font-size: 11pt;
    }

    .expertise-grid h3 {
      font-size: 12pt;
      font-weight: 500;
      color: var(--apple-dark-gray);
      margin-bottom: 8px;
    }

    .expertise-grid ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .expertise-grid li {
      font-size: 11pt;
      color: var(--apple-gray);
      margin-bottom: 6px;
    }

    .experience-item,
    .project-item,
    .certification-item,
    .award-item,
    .education-item {
      margin: 20px 0;
      padding-left: 15px;
      border-left: 2px solid var(--apple-light-gray);
    }

    .experience-item h3,
    .project-item h3,
    .certification-item h3,
    .award-item h3,
    .education-item h3 {
      font-size: 13pt;
      font-weight: 500;
      color: var(--apple-dark-gray);
      margin: 0 0 6px;
    }

    .experience-item p,
    .project-item p,
    .certification-item p,
    .award-item p,
    .education-item p {
      font-size: 11pt;
      color: var(--apple-gray);
      margin: 4px 0;
    }

    ul {
      list-style: disc;
      padding-left: 20px;
      margin: 8px 0;
    }

    .text-center {
      text-align: center;
    }

    li {
      font-size: 11pt;
      color: var(--apple-gray);
      margin-bottom: 6px;
    }

    @media print {
      body {
        padding: 20px;
      }

      .links p {
        color: var(--apple-dark-gray);
      }
    }
  </style>
</head>

<body>
  <div class="header">
    <h1 class="name">
      {{#each sections.intro.fields}}
      {{#if name}}{{name}}{{/if}}
      {{/each}}
    </h1>
    {{#each sections.intro.fields}}
    {{#if role}}<p class="role">{{role}}</p>{{/if}}
    {{/each}}
    <div class="contact">
      {{#each sections.intro.fields}}
      {{#if email}}<p>{{email}}</p>{{/if}}
      {{#if location}}<p>{{location}}</p>{{/if}}
      {{#if portfolio_url}}<p>{{portfolio_url}}</p>{{/if}}
      {{/each}}
    </div>
  </div>

  {{#each sections.intro.fields}}
  {{#if summary}}
  <div class="section">
    <h2 class="section-title text-center">{{../sections.intro.title}}</h2>
    <p class="summary">{{summary}}</p>
  </div>
  {{/if}}
  {{/each}}

  {{#if sections.links.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.links.title}}</h2>
    <div class="links">
      {{#each sections.links.fields}}
      {{#if github}}<p>GitHub: {{github}}</p>{{/if}}
      {{#if linkedin}}<p>LinkedIn: {{linkedin}}</p>{{/if}}
      {{#if portfolio_url}}<p>Portfolio: {{portfolio_url}}</p>{{/if}}
      {{/each}}
    </div>
  </div>
  {{/if}}

  {{#if sections.expertise.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.expertise.title}}</h2>
    <div class="expertise-grid">
      {{#each sections.expertise.fields}}
      <div>
        <h3>{{@key}}</h3>
        <ul>
          {{#each this}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}

  {{#if sections.experience.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.experience.title}}</h2>
    {{#each sections.experience.fields}}
    <div class="experience-item">
      <h3>{{role}} at {{company}}</h3>
      {{#if period}}<p>{{period}}</p>{{/if}}
      {{#if impact}}<p>{{impact}}</p>{{/if}}
      {{#if innovations}}<p><strong>Innovations:</strong> {{innovations}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.projects.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.projects.title}}</h2>
    {{#each sections.projects.fields}}
    <div class="project-item">
      <h3>{{title}}</h3>
      {{#if outcome}}<p>{{outcome}}</p>{{/if}}
      {{#if stack}}<p><strong>Stack:</strong> {{stack}}</p>{{/if}}
      {{#if link}}<p><strong>Link:</strong> {{link}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.certifications.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.certifications.title}}</h2>
    {{#each sections.certifications.fields}}
    <div class="certification-item">
      <h3>{{name}}</h3>
      <p>{{issuer}} - {{date}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.languages.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.languages.title}}</h2>
    <ul>
      {{#each sections.languages.fields}}
      <li>{{language}} - {{proficiency}}</li>
      {{/each}}
    </ul>
  </div>
  {{/if}}

  {{#if sections.awards.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.awards.title}}</h2>
    {{#each sections.awards.fields}}
    <div class="award-item">
      <h3>{{title}}</h3>
      <p>{{issuer}} - {{date}}</p>
      {{#if description}}<p>{{description}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.education.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.education.title}}</h2>
    {{#each sections.education.fields}}
    <div class="education-item">
      <h3>{{qualification}}</h3>
      <p>{{institution}} - {{year}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}
</body>

</html>