<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{{intro.name}} - Resume</title>
  <style>
    :root {
      --apple-gray: #86868b;
      --apple-black: #1d1d1f;
      --apple-blue: #0066cc;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', sans-serif;
      line-height: 1.5;
      max-width: 900px;
      margin: 0 auto;
      padding: 50px;
      color: var(--apple-black);
    }
    .header {
      text-align: center;
      margin-bottom: 40px;
    }
    .name {
      font-size: 3em;
      font-weight: 700;
      margin: 0;
    }
    .role {
      color: var(--apple-gray);
      font-size: 1.5em;
      margin: 10px 0;
    }
    .contact {
      display: flex;
      justify-content: center;
      gap: 20px;
      color: var(--apple-blue);
    }
    .section {
      margin: 40px 0;
    }
    .section-title {
      font-size: 1.8em;
      font-weight: 600;
      margin-bottom: 20px;
    }
    .expertise-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 30px;
    }
    .expertise-item {
      background: #f5f5f7;
      padding: 20px;
      border-radius: 12px;
    }
    .experience-item {
      margin: 25px 0;
      padding-left: 20px;
      border-left: 2px solid var(--apple-blue);
    }
    .project {
      margin: 20px 0;
      padding: 20px;
      background: #f5f5f7;
      border-radius: 12px;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1 class="name">{{#if sections.intro.fields.name}}{{sections.intro.fields.name}}{{else}}Your Name{{/if}}</h1>
    <div class="contact">
      {{#if sections.intro.fields.email}}<span>{{sections.intro.fields.email}}</span>{{/if}}
      {{#if sections.intro.fields.phone}}<span>{{sections.intro.fields.phone}}</span>{{/if}}
      {{#if sections.intro.fields.location}}<span>{{sections.intro.fields.location}}</span>{{/if}}
      {{#if sections.links.fields.portfolio_url}}<span>{{sections.links.fields.portfolio_url}}</span>{{/if}}
    </div>
  </div>

  {{#if sections.experience.fields}}
  <div class="section">
    <h2 class="section-title">Professional Experience</h2>
    {{#each sections.experience.fields}}
    <div class="experience-item">
      <h3>{{position}} at {{company}}</h3>
      {{#if duration}}<p class="dates">{{duration}}</p>{{/if}}
      {{#if achievements}}<p>{{achievements}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.skills.grouping}}
  <div class="section">
    <h2 class="section-title">Skills</h2>
    <div class="expertise-grid">
      {{#each sections.skills.grouping}}
      <div class="expertise-item">
        <h3>{{category}}</h3>
        <ul>
          {{#each skills}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}

  {{#if sections.projects.fields}}
  <div class="section">
    <h2 class="section-title">Projects</h2>
    {{#each sections.projects.fields}}
    <div class="project">
      <h3>{{name}}</h3>
      {{#if description}}<p>{{description}}</p>{{/if}}
      {{#if technologies}}<p><strong>Technologies:</strong> {{technologies}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.certifications.fields}}
  <div class="section">
    <h2 class="section-title">Certifications</h2>
    {{#each sections.certifications.fields}}
    <div class="certification">
      <h3>{{name}}</h3>
      <p>{{issuer}} - {{date}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.languages.fields}}
  <div class="section">
    <h2 class="section-title">Languages</h2>
    <ul>
      {{#each sections.languages.fields}}
      <li>{{language}} - {{proficiency}}</li>
      {{/each}}
    </ul>
  </div>
  {{/if}}

  {{#if sections.awards.fields}}
  <div class="section">
    <h2 class="section-title">Awards</h2>
    {{#each sections.awards.fields}}
    <div class="award">
      <h3>{{title}}</h3>
      <p>{{issuer}} - {{date}}</p>
      {{#if description}}<p>{{description}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.education.fields}}
  <div class="section">
    <h2 class="section-title">Education</h2>
    {{#each sections.education.fields}}
    <div class="education-item">
      <h3>{{degree}}</h3>
      <p>{{institution}} - {{duration}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}
</body>
</html>