<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{{intro.name}} - Resume</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.5;
      max-width: 800px;
      margin: 0 auto;
      padding: 30px;
      color: #000000;
    }
    .header {
      text-align: center;
      margin-bottom: 20px;
    }
    .name {
      font-size: 24px;
      font-weight: bold;
      margin: 0;
    }
    .contact {
      margin: 10px 0;
    }
    .section {
      margin: 20px 0;
    }
    .section-title {
      font-size: 18px;
      font-weight: bold;
      text-transform: uppercase;
      border-bottom: 1px solid #000000;
      margin-bottom: 10px;
    }
    .experience-item {
      margin: 15px 0;
    }
    .company-title {
      font-weight: bold;
    }
    .dates {
      font-style: italic;
    }
    ul {
      margin: 5px 0;
      padding-left: 20px;
    }
    li {
      margin: 3px 0;
    }
    .skills-list {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }
    .skill {
      background: #f0f0f0;
      padding: 3px 8px;
      border-radius: 3px;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1 class="name">{{intro.name}}</h1>
    <div class="contact">
      {{intro.email}} | {{intro.phone}} | {{intro.location}}
    </div>
    <div class="headline">
      {{intro.headline}}
    </div>
  </div>

  <div class="section">
    <h2 class="section-title">Professional Summary</h2>
    <p>{{intro.summary}}</p>
  </div>

  <div class="section">
    <h2 class="section-title">Core Competencies</h2>
    <div class="skills-list">
      {{#each skills}}
        <span class="skill">{{this}}</span>
      {{/each}}
    </div>
  </div>

  <div class="section">
    <h2 class="section-title">Professional Experience</h2>
    {{#each experience}}
    <div class="experience-item">
      <div class="company-title">{{title}} - {{company}}</div>
      <div class="dates">{{dates}}</div>
      <ul>
        {{#each responsibilities}}
        <li>{{this}}</li>
        {{/each}}
        {{#each metrics}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
    {{/each}}
  </div>

  <div class="section">
    <h2 class="section-title">Education</h2>
    {{#each education}}
    <div class="education-item">
      <div class="company-title">{{degree}} in {{major}}</div>
      <div>{{school}}</div>
      <div class="dates">Graduated: {{graduation}}</div>
    </div>
    {{/each}}
  </div>

  <div class="section">
    <h2 class="section-title">Certifications</h2>
    {{#each certifications}}
    <div class="certification-item">
      <div class="company-title">{{name}}</div>
      <div>{{issuer}} - {{date}}</div>
    </div>
    {{/each}}
  </div>
</body>
</html>