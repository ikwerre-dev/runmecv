<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{{intro.name}} - Resume</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.5;
      max-width: 800px;
      margin: 0 auto;
      padding: 30px;
      color: #000000;
    }
    .header {
      text-align: center;
      margin-bottom: 20px;
    }
    .name {
      font-size: 24px;
      font-weight: bold;
      margin: 0;
    }
    .contact {
      margin: 10px 0;
    }
    .section {
      margin: 20px 0;
    }
    .section-title {
      font-size: 18px;
      font-weight: bold;
      text-transform: uppercase;
      border-bottom: 1px solid #000000;
      margin-bottom: 10px;
    }
    .experience-item {
      margin: 15px 0;
    }
    .company-title {
      font-weight: bold;
    }
    .dates {
      font-style: italic;
    }
    ul {
      margin: 5px 0;
      padding-left: 20px;
    }
    li {
      margin: 3px 0;
    }
    .skills-list {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }
    .skill {
      background: #f0f0f0;
      padding: 3px 8px;
      border-radius: 3px;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1 class="name">{{#if sections.intro.fields.name}}{{sections.intro.fields.name}}{{else}}Your Name{{/if}}</h1>
    <div class="contact">
      {{#if sections.intro.fields.email}}{{sections.intro.fields.email}} | {{/if}}
      {{#if sections.intro.fields.phone}}{{sections.intro.fields.phone}} | {{/if}}
      {{#if sections.intro.fields.location}}{{sections.intro.fields.location}} | {{/if}}
      {{#if sections.links.fields.portfolio_url}}{{sections.links.fields.portfolio_url}}{{/if}}
    </div>
  </div>

  {{#if sections.experience.fields}}
  <div class="section">
    <h2 class="section-title">Professional Experience</h2>
    {{#each sections.experience.fields}}
    <div class="experience-item">
      <div class="company-title">{{position}} - {{company}}</div>
      {{#if duration}}<div class="dates">{{duration}}</div>{{/if}}
      {{#if achievements}}<p>{{achievements}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.skills.grouping}}
  <div class="section">
    <h2 class="section-title">Skills</h2>
    <div class="skills-list">
      {{#each sections.skills.grouping}}
        {{#each skills}}
          <span class="skill">{{this}}</span>
        {{/each}}
      {{/each}}
    </div>
  </div>
  {{/if}}

  {{#if sections.projects.fields}}
  <div class="section">
    <h2 class="section-title">Projects</h2>
    {{#each sections.projects.fields}}
    <div class="project">
      <h3>{{name}}</h3>
      {{#if description}}<p>{{description}}</p>{{/if}}
      {{#if technologies}}<p><strong>Technologies:</strong> {{technologies}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.certifications.fields}}
  <div class="section">
    <h2 class="section-title">Certifications</h2>
    {{#each sections.certifications.fields}}
    <div class="certification">
      <h3>{{name}}</h3>
      <p>{{issuer}} - {{date}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.languages.fields}}
  <div class="section">
    <h2 class="section-title">Languages</h2>
    <ul>
      {{#each sections.languages.fields}}
      <li>{{language}} - {{proficiency}}</li>
      {{/each}}
    </ul>
  </div>
  {{/if}}

  {{#if sections.awards.fields}}
  <div class="section">
    <h2 class="section-title">Awards</h2>
    {{#each sections.awards.fields}}
    <div class="award">
      <h3>{{title}}</h3>
      <p>{{issuer}} - {{date}}</p>
      {{#if description}}<p>{{description}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.education.fields}}
  <div class="section">
    <h2 class="section-title">Education</h2>
    {{#each sections.education.fields}}
    <div class="education-item">
      <h3>{{degree}}</h3>
      <p>{{institution}} - {{duration}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}
</body>
</html>