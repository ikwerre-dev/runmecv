<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{{#if intro.name}}{{intro.name}}{{else}}Resume{{/if}}</title>
  <style>
    body {
      font-family: Arial, Helvetica, sans-serif;
      font-size: 12pt;
      line-height: 1.5;
      color: #000000;
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background: #ffffff;
    }

    .header {
      margin-bottom: 20px;
    }

    .name {
      font-size: 20pt;
      font-weight: bold;
      margin: 0;
    }

    .contact {
      font-size: 11pt;
      margin: 5px 0;
    }

    .section {
      margin: 15px 0;
    }

    .section-title {
      font-size: 14pt;
      font-weight: bold;
      margin-bottom: 10px;
      text-transform: uppercase;
    }

    .summary, .responsibilities, .metrics {
      font-size: 11pt;
      margin: 5px 0;
    }

    .experience-item, .certification-item, .award-item, .education-item {
      margin: 10px 0;
    }

    .experience-item h3, .certification-item h3, .award-item h3, .education-item h3 {
      font-size: 12pt;
      font-weight: bold;
      margin: 5px 0;
    }

    .experience-item p, .certification-item p, .award-item p, .education-item p {
      font-size: 11pt;
      margin: 3px 0;
    }

    ul {
      list-style: disc;
      padding-left: 20px;
      margin: 5px 0;
    }

    li {
      font-size: 11pt;
      margin-bottom: 3px;
    }

    .links p {
      font-size: 11pt;
      margin: 3px 0;
    }

    @media print {
      body {
        padding: 10px;
      }
    }
  </style>
</head>
<body>
  <div class="header">
    <h1 class="name">
      {{#each sections.intro.fields}}
      {{#if name}}{{name}}{{/if}}
      {{/each}}
    </h1>
    <div class="contact">
      {{#each sections.intro.fields}}
      {{#if contact}}<p>{{contact}}</p>{{/if}}
      {{#if headline}}<p>{{headline}}</p>{{/if}}
      {{/each}}
    </div>
  </div>

  {{#each sections.intro.fields}}
  {{#if summary}}
  <div class="section">
    <h2 class="section-title">{{../sections.intro.title}}</h2>
    <p class="summary">{{summary}}</p>
  </div>
  {{/if}}
  {{/each}}

  {{#if sections.links.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.links.title}}</h2>
    <div class="links">
      {{#each sections.links.fields}}
      {{#if github}}<p>GitHub: {{github}}</p>{{/if}}
      {{#if linkedin}}<p>LinkedIn: {{linkedin}}</p>{{/if}}
      {{#if portfolio_url}}<p>Portfolio: {{portfolio_url}}</p>{{/if}}
      {{/each}}
    </div>
  </div>
  {{/if}}

  {{#if sections.skills.keywords}}
  <div class="section">
    <h2 class="section-title">{{sections.skills.title}}</h2>
    <ul>
      {{#each sections.skills.keywords}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
  </div>
  {{/if}}

  {{#if sections.experience.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.experience.title}}</h2>
    {{#each sections.experience.fields}}
    <div class="experience-item">
      <h3>{{title}} at {{company}}</h3>
      {{#if dates}}<p>{{dates}}</p>{{/if}}
      {{#if responsibilities}}<p class="responsibilities">{{responsibilities}}</p>{{/if}}
      {{#if metrics}}<p class="metrics">{{metrics}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.certifications.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.certifications.title}}</h2>
    {{#each sections.certifications.fields}}
    <div class="certification-item">
      <h3>{{name}}</h3>
      <p>{{issuer}} - {{date}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.languages.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.languages.title}}</h2>
    <ul>
      {{#each sections.languages.fields}}
      <li>{{language}} - {{proficiency}}</li>
      {{/each}}
    </ul>
  </div>
  {{/if}}

  {{#if sections.awards.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.awards.title}}</h2>
    {{#each sections.awards.fields}}
    <div class="award-item">
      <h3>{{title}}</h3>
      <p>{{issuer}} - {{date}}</p>
      {{#if description}}<p>{{description}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.education.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.education.title}}</h2>
    {{#each sections.education.fields}}
    <div class="education-item">
      <h3>{{degree}}, {{major}}</h3>
      <p>{{school}} - {{graduation}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}
</body>
</html>