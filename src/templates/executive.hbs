<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{{#if intro.name}}{{intro.name}}{{else}}Executive Resume{{/if}}</title>
  <style>
    :root {
      --executive-dark: #2D3436;
      --executive-gray: #636E72;
      --executive-light: #DFE6E9;
      --executive-accent: #0984E3;
    }

    body {
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      font-size: 11pt;
      line-height: 1.6;
      color: var(--executive-dark);
      max-width: 800px;
      margin: 0 auto;
      padding: 30px;
      background: #ffffff;
    }

    .header {
      text-align: center;
      margin-bottom: 25px;
      border-bottom: 1px solid var(--executive-light);
      padding-bottom: 15px;
    }

    .name {
      font-size: 24pt;
      font-weight: 700;
      color: var(--executive-dark);
      margin: 0;
    }

    .title {
      font-size: 14pt;
      font-weight: 400;
      color: var(--executive-gray);
      margin: 5px 0;
    }

    .contact {
      font-size: 10pt;
      color: var(--executive-gray);
      margin: 5px 0;
    }

    .section {
      margin: 20px 0;
    }

    .section-title {
      font-size: 16pt;
      font-weight: 600;
      color: var(--executive-dark);
      margin-bottom: 12px;
      text-transform: uppercase;
    }

    .executive-summary {
      font-size: 11pt;
      color: var(--executive-gray);
      line-height: 1.7;
      max-width: 85%;
      margin: 0 auto;
      text-align: center;
    }

    .links {
      display: flex;
      justify-content: center;
      gap: 15px;
      font-size: 11pt;
      color: var(--executive-accent);
    }

    .links p {
      margin: 0;
    }

    .highlights ul {
      list-style: disc;
      padding-left: 20px;
      margin: 10px 0;
    }

    .highlights li {
      font-size: 11pt;
      color: var(--executive-gray);
      margin-bottom: 8px;
    }

    .experience-item, .board-item, .certification-item, .award-item, .education-item {
      margin: 15px 0;
      padding-left: 10px;
      border-left: 2px solid var(--executive-light);
    }

    .experience-item h3, .board-item h3, .certification-item h3, .award-item h3, .education-item h3 {
      font-size: 13pt;
      font-weight: 500;
      color: var(--executive-dark);
      margin: 0 0 5px;
    }

    .experience-item p, .board-item p, .certification-item p, .award-item p, .education-item p {
      font-size: 11pt;
      color: var(--executive-gray);
      margin: 3px 0;
    }

    ul {
      list-style: disc;
      padding-left: 20px;
      margin: 8px 0;
    }

    li {
      font-size: 11pt;
      color: var(--executive-gray);
      margin-bottom: 5px;
    }

    @media print {
      body {
        padding: 20px;
      }

      .links p {
        color: var(--executive-dark);
      }
    }
  </style>
</head>
<body>
  <div class="header">
    <h1 class="name">
      {{#each sections.intro.fields}}
      {{#if name}}{{name}}{{/if}}
      {{/each}}
    </h1>
    <div class="title">
      {{#each sections.intro.fields}}
      {{#if title}}<p>{{title}}</p>{{/if}}
      {{/each}}
    </div>
    <div class="contact">
      {{#each sections.intro.fields}}
      {{#if contact}}<p>{{contact}}</p>{{/if}}
      {{#if portfolio_url}}<p>{{portfolio_url}}</p>{{/if}}
      {{/each}}
    </div>
  </div>

  {{#each sections.intro.fields}}
  {{#if executive_summary}}
  <div class="section">
    <h2 class="section-title">{{../sections.intro.title}}</h2>
    <p class="executive-summary">{{executive_summary}}</p>
  </div>
  {{/if}}
  {{/each}}

  {{#if sections.links.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.links.title}}</h2>
    <div class="links">
      {{#each sections.links.fields}}
      {{#if linkedin}}<p>LinkedIn: {{linkedin}}</p>{{/if}}
      {{#if portfolio_url}}<p>Portfolio: {{portfolio_url}}</p>{{/if}}
      {{/each}}
    </div>
  </div>
  {{/if}}

  {{#if sections.highlights.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.highlights.title}}</h2>
    <div class="highlights">
      <ul>
        {{#each sections.highlights.fields}}
        {{#if achievements}}<li>{{achievements}} - {{impact}} (Scale: {{scale}})</li>{{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  {{/if}}

  {{#if sections.experience.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.experience.title}}</h2>
    {{#each sections.experience.fields}}
    <div class="experience-item">
      <h3>{{position}} at {{organization}}</h3>
      {{#if period}}<p>{{period}}</p>{{/if}}
      {{#if p&l}}<p>P&L: {{p&l}}</p>{{/if}}
      {{#if team_size}}<p>Team Size: {{team_size}}</p>{{/if}}
      {{#if achievements}}<p>{{achievements}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.board.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.board.title}}</h2>
    {{#each sections.board.fields}}
    <div class="board-item">
      <h3>{{role}} at {{organization}}</h3>
      {{#if period}}<p>{{period}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.certifications.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.certifications.title}}</h2>
    {{#each sections.certifications.fields}}
    <div class="certification-item">
      <h3>{{name}}</h3>
      <p>{{issuer}} - {{date}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.languages.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.languages.title}}</h2>
    <ul>
      {{#each sections.languages.fields}}
      <li>{{language}} - {{proficiency}}</li>
      {{/each}}
    </ul>
  </div>
  {{/if}}

  {{#if sections.awards.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.awards.title}}</h2>
    {{#each sections.awards.fields}}
    <div class="award-item">
      <h3>{{title}}</h3>
      <p>{{issuer}} - {{date}}</p>
      {{#if description}}<p>{{description}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.education.fields}}
  <div class="section">
    <h2 class="section-title">{{sections.education.title}}</h2>
    {{#each sections.education.fields}}
    <div class="education-item">
      <h3>{{degree}}</h3>
      <p>{{institution}}</p>
      {{#if honors}}<p>Honors: {{honors}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}
</body>
</html>