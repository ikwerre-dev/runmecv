<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{{sections.intro.fields.name}} - Executive Resume</title>
  <style>
    :root {
      --primary: #2c3e50;
      --accent: #34495e;
      --gold: #c4a777;
    }
    body {
      font-family: 'Georgia', serif;
      line-height: 1.6;
      max-width: 1100px;
      margin: 0 auto;
      padding: 50px;
      color: var(--primary);
      background: #ffffff;
    }
    .header {
      border-bottom: 3px solid var(--gold);
      padding-bottom: 30px;
      margin-bottom: 40px;
    }
    .name {
      font-size: 36px;
      margin: 0;
      letter-spacing: 2px;
    }
    .title {
      font-size: 24px;
      color: var(--accent);
      margin: 10px 0;
    }
    .contact {
      display: flex;
      justify-content: space-between;
      font-size: 16px;
      margin-top: 20px;
    }
    .section {
      margin: 35px 0;
    }
    .section-title {
      font-size: 22px;
      color: var(--primary);
      border-bottom: 2px solid var(--gold);
      padding-bottom: 8px;
      margin-bottom: 25px;
    }
    .highlights {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 25px;
      margin: 20px 0;
    }
    .highlight-item {
      padding: 20px;
      background: #f8f9fa;
      border-left: 3px solid var(--gold);
    }
    .experience-item {
      margin: 30px 0;
    }
    .position {
      font-size: 20px;
      font-weight: bold;
      margin-bottom: 5px;
    }
    .organization {
      font-size: 18px;
      color: var(--accent);
    }
    .metrics {
      display: flex;
      gap: 30px;
      margin: 10px 0;
      font-style: italic;
    }
    .board-position {
      margin: 20px 0;
      padding: 15px;
      background: #f8f9fa;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1 class="name">{{#if sections.intro.fields.name}}{{sections.intro.fields.name}}{{else}}Your Name{{/if}}</h1>
    <div class="contact">
      {{#if sections.intro.fields.email}}<span>{{sections.intro.fields.email}}</span>{{/if}}
      {{#if sections.intro.fields.phone}}<span>{{sections.intro.fields.phone}}</span>{{/if}}
      {{#if sections.intro.fields.location}}<span>{{sections.intro.fields.location}}</span>{{/if}}
      {{#if sections.links.fields.portfolio_url}}<span>{{sections.links.fields.portfolio_url}}</span>{{/if}}
    </div>
  </div>

  {{#if sections.experience.fields}}
  <div class="section">
    <h2 class="section-title">Leadership Experience</h2>
    {{#each sections.experience.fields}}
    <div class="experience-item">
      <div class="position">{{position}}</div>
      <div class="organization">{{organization}} | {{period}}</div>
      <div class="metrics">
        <span>P&L: {{p_and_l}}</span>
        <span>Team Size: {{team_size}}</span>
      </div>
      {{#if achievements}}<p>{{achievements}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.skills.grouping}}
  <div class="section">
    <h2 class="section-title">Executive Skills</h2>
    <div class="skills-grid">
      {{#each sections.skills.grouping}}
      <div>
        <h3>{{category}}</h3>
        {{#if skills}}
        <ul>
          {{#each skills}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
        {{/if}}
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}

  {{#if sections.certifications.fields}}
  <div class="section">
    <h2 class="section-title">Certifications</h2>
    {{#each sections.certifications.fields}}
    <div class="certification">
      <h3>{{name}}</h3>
      <p>{{issuer}} - {{date}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.languages.fields}}
  <div class="section">
    <h2 class="section-title">Languages</h2>
    <ul>
      {{#each sections.languages.fields}}
      <li>{{language}} - {{proficiency}}</li>
      {{/each}}
    </ul>
  </div>
  {{/if}}

  {{#if sections.awards.fields}}
  <div class="section">
    <h2 class="section-title">Awards & Recognition</h2>
    {{#each sections.awards.fields}}
    <div class="award">
      <h3>{{title}}</h3>
      <p>{{issuer}} - {{date}}</p>
      {{#if description}}<p>{{description}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.board.fields}}
  <div class="section">
    <h2 class="section-title">Board Positions</h2>
    {{#each sections.board.fields}}
    <div class="board-position">
      <h3>{{organization}}</h3>
      <p>{{role}} | {{period}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if sections.education.fields}}
  <div class="section">
    <h2 class="section-title">Education & Credentials</h2>
    {{#each sections.education.fields}}
    <div class="education-item">
      <h3>{{degree}}</h3>
      <p>{{institution}} - {{duration}}</p>
      {{#if honors}}<p class="honors">{{honors}}</p>{{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}
</body>
</html>